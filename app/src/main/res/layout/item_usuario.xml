<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_background"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Vendedor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryBlue" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email del vendedor"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono del vendedor"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Botones de Acción -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- Botón de Editar -->
        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Editar Producto"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/primaryBlue" />

        <!-- Botón de Eliminar -->
        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Eliminar Producto"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="8dp"
            app:tint="@color/naranja" />
    </LinearLayout>
</LinearLayout>
